#include<iostream>
using namespace std;


int main(){
int Num1;
cout<<"Enter no. of Rows: ";
cin>>Num1;
for(int i=Num1; i>=1;i--){
    for(int j=1; j<=i;j++){
        if(i==1||j==1||i==Num1||j==i){
        cout<<"*";
        }
        else{
            cout<<" ";
        }
       
    }
    cout<<endl;
}

    return 0;

}
